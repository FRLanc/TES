begin 1game_inside_teleportation

;Перемещает игрока по станции

short button
short state
float wait

if ( MenuMode == 1 )
	return
endif

if ( wait >= 0.9 )
	set wait to ( wait + GetSecondsPassed )
	if ( wait > 3 )
		set wait to 0
	endif
	return
endif

if ( state == 0 )
	if ( GetStandingPC == 1 )
 		set state to 1
	endif
endif

if ( state == 1 )
  if( "1game_ready" == 1 )
	Messagebox "Доступная телепортация:" "Башня" "Зал телепортации" "Отмена"
	set state to 2
elseif ( state == 2 )
	set button to GetButtonPressed
        if ( button == 0 )
              playsound "conjuration hit"
			Player->PositionCell 4041, 4905, 12282, 0 "Гелендорф, Башня"
				set "1game_ready" to 0
        elseif ( button == 1 )
              playsound "conjuration hit"
			Player->PositionCell 3958, 3414, 15183, 0 "Гелендорф, Зал Телепортации"
				set "1game_ready" to 0
	endif
	endif
	set wait to 1.0
	set state to 0
	set button to 0
endif

end
