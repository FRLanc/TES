begin 1game_inside_telestream

;Поднимает стержни вместе с плитой из 1game_inside_teleport

float timer
short state
short working

if ( MenuMode == 1 )
  return
endif

if ( State == 1 )
  set working to 1
  set timer to ( timer + GetSecondsPassed )
  if ( timer < 2 )
    move z 10
  elseif ( timer < 3 )
    set timer to 0
    set state to 2
    set working to 0
  endif
endif

if ( state == 3 )
  set working to 1
  set timer to ( timer + GetSecondsPassed )
  if ( timer < 2 )
    move z -10
  elseif ( timer < 3 )
    set timer to 0
    set state to 0
    set working to 0
  endif
endif

if ( working == 1 )
  return
endif

if ( "1game_ready" == 1 )
  if ( state == 0 )
    set state to 1
  endif
elseif ( "1game_ready" == 0 )
  if ( state == 2 )
    set state to 3
  endif
endif

end
