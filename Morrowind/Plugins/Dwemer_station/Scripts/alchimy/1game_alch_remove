Begin 1game_alch_remove

if ( menumode == 1 )
	Return
endif

if ( "1game_alch_state" == 1 )
	if ( Player->GetItemCount, "1game_alch_alembic" > 0 )
		Player->RemoveItem "1game_alch_alembic" 1
	endif
endif
	if ( Player->GetItemCount, "1game_alch_calcinator" > 0 )
		Player->RemoveItem "1game_alch_calcinator" 1
	endif
endif
	if ( Player->GetItemCount, "1game_alch_retorta" > 0 )
		Player->RemoveItem "1game_alch_retorta" 1
	endif
endif
	if ( Player->GetItemCount, "1game_alch_mortarpesle" > 0 )
		Player->RemoveItem "1game_alch_mortarpesle" 1
	endif
endif
set "1game_alch_state" to 0

StopScript 1game_alch_remove

End
